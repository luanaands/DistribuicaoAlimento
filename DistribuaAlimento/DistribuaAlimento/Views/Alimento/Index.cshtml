@model IEnumerable<DistribuaAlimento.Models.Alimento>

@{
    ViewBag.Title = "Index";
}

<br/>
<br />
<div class="col-lg-12">
    <p>
        @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.gramas)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.validade)
                </th>               
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.gramas)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.validade)
                    </td>
                  
                    <td class="text-left">
                        @Html.ActionLink("Exibir", "Details", new { id = item.id }, new { @class = "btn btn-outline btn-success btn-xs" })
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>