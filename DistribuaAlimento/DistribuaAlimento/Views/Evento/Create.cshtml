@model DistribuaAlimento.Models.Evento

@{
    ViewBag.Title = "Evento";
}
<br />
<br />
<br />


<div class="col-md-10 col-lg-offset-1">

    @using (Html.BeginForm("Create", "Evento"))
    {
        @Html.AntiForgeryToken()

        <div class="panel panel-success" id="panel" name="panel">
            <div class="panel-heading">
                <div class="panel-title"></div>
            </div>

            <div class="panel-body" id="panelEvento" name="panelEvento">

                <div class="form-group col-lg-4 text-left">
                    @Html.LabelFor(model => model.nome)
                    @Html.EditorFor(model => model.nome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.nome, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-lg-4 text-left">
                    @Html.LabelFor(model => model.idInstituicao)
                    @Html.DropDownListFor(g => g.idInstituicao, new SelectList(ViewBag.inst, "id", "razaosocial"), htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.idInstituicao, string.Empty, new { @class = "text-danger" })
                </div>
               
                <div class="form-group col-lg-4 text-left">
                    @Html.LabelFor(model => model.inicio)
                    @Html.EditorFor(model => model.inicio, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.inicio, "", new { @class = "text-danger" })
                </div>

                <div class="form-group col-lg-4 text-left">
                    @Html.LabelFor(model => model.fim)
                    @Html.EditorFor(model => model.fim, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.fim, "", new { @class = "text-danger" })
                </div>
                <div class="form-group col-lg-4 text-left">
                    @Html.LabelFor(model => model.publico)
                    @Html.EditorFor(model => model.publico, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.publico, "", new { @class = "text-danger" })
                </div>
               
            </div>
        </div>
        <div class="text-left">
            <input type="submit" value="Salvar" class="btn btn-primary" />
            <input type="button" value="Cancelar" onclick="location.href='@Url.Action("Index", "Evento")'" class="btn btn-warning" />
        </div>


    }
</div>


@section Scripts {

    <script>

            $(document).ready(function () {
                if ($("#msgErro").val() != null && $("#msgErro").val() != "") {
                    ExibirNotificacaoErro([$("#msgErro").val()]);
                }
            });


            $('#inicio').datepicker({
                locale: 'pt-BR',
                format: 'dd/mm/yyyy',
                useCurrent: false,
                autoclose: true,
                todayHighlight: true
            });

            $('#fim').datepicker({
                locale: 'pt-BR',
                format: 'dd/mm/yyyy',
                useCurrent: false,
                autoclose: true,
                todayHighlight: true
            });
          
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}
