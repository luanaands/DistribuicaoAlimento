@model IEnumerable<DistribuaAlimento.Models.OrganizacoesFilantropicas>

@{
    ViewBag.Title = "Index";
}

<br />
<br />
<div class="col-lg-12">
    <p>
        @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
    </p>
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.nomeRepresentante)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cnpj)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.contato)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.quantidadePessoas)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {

                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.nomeRepresentante)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cnpj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.contato)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.quantidadePessoas)
                    </td>
                    <td class="text-left">
                        @Html.ActionLink("Exibir", "Details", new { id = item.id }, new { @class = "btn btn-outline btn-success btn-xs" })
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>