@model PagedList.IPagedList< DistribuaAlimento.Models.Arrecadado>
   
@using PagedList.Mvc;

    @{
        ViewBag.Title = "Index";
    }

    <br />
    <br />
    <div class="col-lg-12">
        <p>
            @Html.ActionLink("Novo", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <table class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().nome)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().gramas)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().validade)
                    </th>

                    <th>
                        @Html.DisplayNameFor(model => model.FirstOrDefault().eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().estoque.evento.nome)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
            {

                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().gramas)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().validade)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.eventos.FirstOrDefault().estoque.alimentos.FirstOrDefault().estoque.evento.nome)
                        </td>
                        <td class="text-left">
                            @Html.ActionLink("Exibir", "Details", new { id = item.id }, new { @class = "btn btn-outline btn-success btn-xs" })
                        </td>

                    </tr>
                }
            </tbody>
        </table>
    </div>
 Página @(@Model.TotalItemCount > 0 ? Model.PageNumber : 0) de @Model.PageCount
@Html.PagedListPager(Model, Page => Url.Action("Index", new { page = Page }))